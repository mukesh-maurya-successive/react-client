{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb"],
    "rules": {
        "indent": [2, 2],
        "react/jsx-indent": ["error", 2],
        "import/prefer-default-export": "off"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "classes": true
        }
    }
}
